<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InvalidTextViewTest">


    <com.garroid.androidadvancejava.TitleBar
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        app:title_text="自定义组合控件"
        app:title_bg="@android:color/holo_orange_dark"
        app:title_text_color="@android:color/holo_blue_dark" />

    <com.garroid.androidadvancejava.InvalidTextView
        android:id="@+id/iv_text"
        android:layout_below="@+id/title"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:background="@android:color/holo_blue_light"
        android:gravity="center"
        android:textSize="16sp"
        android:text="继承系统控件的自定义View"
        android:layout_centerHorizontal="true" />

    <com.garroid.androidadvancejava.RectView
        android:id="@+id/rv_rect"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@+id/iv_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        app:rect_color="@android:color/holo_blue_light"
        android:padding="20dp" />


</RelativeLayout>